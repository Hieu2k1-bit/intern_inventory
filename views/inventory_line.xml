<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="my_module_view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="attributes">
                <attribute name="decoration-success">True</attribute>
                <attribute name="decoration-warning">False</attribute>
            </xpath>
            <xpath expr="//field[@name='reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="my_module_view_move_line_tree_detailed_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.tree.detailed.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree_detailed"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_partner_id']" position="after">
                <field name="create_uid" string="Created By" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="my_module_view_move_line_form_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
            </xpath>
        </field>
    </record>

    <record id="my_module_view_move_line_mobile_form_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.mobile.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_mobile_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="picking_partner_id" string="Đối tác liên quan (Mobile)"/>
            </xpath>
        </field>
    </record>

    <record id="my_module_stock_move_line_view_search_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.search.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='done']" position="after">
                <filter string="Bộ lọc tùy chỉnh của tôi" name="my_custom_filter" domain="[('qty_done', '&gt;', 10)]"/>
            </xpath>
            <xpath expr="//group[@name='groupby']" position="inside">
                <filter string="Thực hiện bởi người dùng" name="by_create_uid" domain="[]" context="{'group_by': 'create_uid'}"/>
            </xpath>
        </field>
    </record>

    <record id="my_module_view_stock_move_line_kanban_inherit" model="ir.ui.view">
        <field name="name">inventory.line.stock.move.line.kanban.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="create_uid" string="Người tạo"/>
            </xpath>
             <xpath expr="//div[strong/field[@name='product_id']]" position="replace">
                <div>
                    <strong>
                        <a t-attf-href="#id=#{record.product_id.id}&amp;model=product.product">
                            <field name="product_id"/>
                        </a>
                    </strong>
                </div>
            </xpath>
            </field>
    </record>

</odoo>